<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ResizeVideo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/maintream</item>
        <item name="colorPrimaryDark">@color/maintream</item>
        <item name="colorSecondary">@color/maintream</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/maintream</item>
        <item name="colorPrimaryDark">@color/maintream</item>
        <item name="colorSecondary">@color/maintream</item>
    </style>

    <style name="CustomStroke" parent="Theme.ResizeVideo">
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Bg_Item_Rs">
        <item name="android:background">@color/black</item>
    </style>

    <style name="CustomBgAudioOptions">
         <item name="android:background">@color/bg_dark_screen</item>
    </style>

    <style name="CustomBgVAudioOptions">
        <item name="cardBackgroundColor">@color/bg_dark_screen_2</item>
    </style>

    <style name="CustomTintIcon">
        <item name="android:tint">@color/white</item>
        <item name="android:drawableTint">@color/white</item>

    </style>

    <style name="BackgroundScreen">
        <item name="android:background">@color/bg_dark_screen_2</item>
    </style>
    <style name="BackgroundFastOptions">
        <item name="android:background">@color/bg_dark_screen</item>
    </style>
    <style name="StyleSpeed">
         <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/radio_speed_unchecked_dark</item>
     </style>
    <style name="BTNMore">
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Edt_Dialog">
        <item name="android:background">@color/bg_dark_screen</item>
    </style>
    <style name="label_select" parent="Theme.ResizeVideo">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
</resources>