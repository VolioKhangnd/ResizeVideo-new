<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ResizeVideo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/maintream</item>
        <item name="colorPrimaryDark">@color/maintream</item>
        <item name="colorSecondary">@color/maintream</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_medium</item>

    </style>

    <style name="MainActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/maintream</item>
        <item name="colorPrimaryDark">@color/maintream</item>
        <item name="colorSecondary">@color/maintream</item>
    </style>



    <style name="description_select">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="StyleSpeed">
        <item name="android:background">@drawable/radio_speed_unchecked</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CustomTintIcon">
        <item name="android:tint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="CustomBgAudioOptions">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="CustomBgVAudioOptions">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="BackgroundScreen">
        <item name="android:background">@color/maintream</item>
    </style>

    <style name="Bg_Item_Rs">
        <item name="android:background">@color/bg_fast_options</item>
    </style>

    <style name="textMain">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextColorDefault">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomStroke" parent="Theme.ResizeVideo">
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="BTNMore">
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ResizeVideo" parent="Base.Theme.ResizeVideo" />

    <style name="Edt_Dialog">
        <item name="android:background">@color/edt</item>
    </style>
</resources>